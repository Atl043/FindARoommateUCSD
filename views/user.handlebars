<body>
	<header>
		<div class="nav-container">

			<!-- INSERT LOGO/IMAGE HERE -->
			<h2>FindARoommate</h2>
			<nav>
				<ul>
					<li><a href="/index">Home</a></li>
					<li><a href="/user">My Profile</a></li>
					<li><a href="/settings">Settings</a></li>
					<!-- PLACEHOLDER LINK FOR SETTINGS PAGE (change '#' to '/settings') -->
				</ul>
			</nav>
		</div>
	</header>


	<div class="user_body">
		<div id="profile-search-btn">
			<a href="/index" style="">Go Search</a>
			<hr>
			</hr>
			<a href="/createProfile">Edit Profile</a>
		</div>

	</div>

	{{#if state}}
	<div class="img-header">

	</div>
	{{#each user}}

	<div class="user-details">
		<img class="picPerson" src={{imgurl}}>
		<h4 id="name_header">{{name}}</h4>
		<h5 id="state_header">{{userstate}}</h5>
		<p id="desc-header">Description: {{description}}</p>
		<p id="email-header">{{email}}</p>
	</div>
	<div class="preference_deets" id="prefs">
		<p id="prefs-head">Preferences</p>

		<div class="pref-grid-row">
			<p id="tag">Rent: {{rent}}</p>
		</div>
		<div class="pref-grid-row">
			<p id="tag">Has own bathroom: {{ownBath}}</p>
		</div>
	</div>
	<div class="pref-grid-row">
		<p id="tag">Has Air Conditioning: {{AC}}</p>
	</div>
	<div class="pref-grid-row">
